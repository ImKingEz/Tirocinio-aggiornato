<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.bbtutorials</groupId>
    <artifactId>users-ui-tests</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>users-ui-tests</name>
    <description>Progetto per l'esecuzione dei test UI dell'applicazione Angular con Selenium e TestNG</description>

    <properties>
        <java.version>17</java.version> <!-- Aggiornato a Java 17 per coerenza con il Dockerfile -->
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <!-- Versioni aggiornate per le librerie di test -->
        <selenium.version>4.20.0</selenium.version> <!-- Ultima versione stabile di Selenium 4 -->
        <testng.version>7.9.0</testng.version>     <!-- Ultima versione stabile di TestNG 7.x -->
        <commons.io.version>2.16.1</commons.io.version> <!-- Ultima versione stabile di Commons IO -->
        <surefire.plugin.version>3.2.5</surefire.plugin.version> <!-- Versione aggiornata di Surefire -->
        <compiler.plugin.version>3.13.0</compiler.plugin.version> <!-- Versione aggiornata di Compiler Plugin -->
    </properties>

    <dependencies>
        <!-- Selenium WebDriver per l'automazione del browser -->
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>${selenium.version}</version>
            <scope>test</scope> <!-- Questi sono test, quindi scope 'test' -->
        </dependency>

        <!-- TestNG per la gestione e l'esecuzione dei test -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>${testng.version}</version>
            <scope>test</scope>
        </dependency>
        
        <!-- Apache Commons IO (se utilizzata nelle tue classi di test) -->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>${commons.io.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- Repositories (generalmente non necessarie se usi solo Maven Central) -->
    <repositories>
        <repository>
            <id>central</id>
            <url>https://repo.maven.apache.org/maven2</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <!-- Plugin per la compilazione Java, configurato per Java 17 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${compiler.plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <!-- Plugin per l'esecuzione dei test (Maven Surefire Plugin) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${surefire.plugin.version}</version>
                <configuration>
                    <!-- Specifica il file XML della suite TestNG da eseguire -->
                    <suiteXmlFiles>
                        <suiteXmlFile>${test.suite.file}</suiteXmlFile>
                    </suiteXmlFiles>
                    <argLine>--add-opens java.base/java.lang=ALL-UNNAMED</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>